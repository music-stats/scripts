{
  "name": "music-stats-scripts",
  "version": "0.0.1",
  "description": "SHOULD become an API gateway between different front-ends and various data providers, currently a set of scripts",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/music-stats/scripts.git"
  },
  "scripts": {
    "upgrade-interactive": "npm-check --update",
    "lint": "tslint ./src/**/*.ts",
    "test": "NODE_PATH=./src jest",
    "clean:dist": "rm -rf ./dist/*",
    "clean:cache:lastfm": "rm -rf ./cache/lastfm/*.json",
    "clean:cache:musicbrainz": "rm -rf ./cache/musicbrainz/*.json",
    "clean:cache:all": "rm -rf ./cache/**/*.json",
    "prebuild": "npm run clean:dist",
    "build": "tsc",
    "build:watch": "tsc -w",
    "script:artist-area-map:1-fetch-artists": "./bin/artist-area-map/1-fetch-artists.sh",
    "script:artist-area-map:2-fetch-artists-areas": "./bin/artist-area-map/2-fetch-artists-areas.sh",
    "script:artist-area-map:3-merge-artists": "./bin/artist-area-map/3-merge-artists.sh",
    "script:scrobble-timeline:1-fetch-scrobbles": "./bin/scrobble-timeline/1-fetch-scrobbles.sh"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.1",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.8",
    "@types/ramda": "0.26.16",
    "husky": "3.0.1",
    "jest": "24.8.0",
    "npm-check": "5.9.0",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "axios": "0.19.0",
    "colors": "1.3.3",
    "dotenv": "8.0.0",
    "ramda": "0.26.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  }
}
